{
    "manifest_version": 3,
    "name": "My First Extension",
    "version": "1.0",
    "description": "The first extension that I made.",
    "action": {
        "default_popup": "../index.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "icon.png"
    }

}